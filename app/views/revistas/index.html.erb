<h1>Listing revistas</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Fecha publicacion</th>
    <th>Numero</th>
    <th>Editorial</th>
  </tr>

<% for revista in @revistas %>
  <tr>
    <td><%=h revista.nombre %></td>
    <td><%=h revista.fecha_publicacion %></td>
    <td><%=h revista.numero %></td>
    <td><%=h truncate(revista.editorial, 150) %></td>
    <td><%= link_to 'Show', revista %></td>
    <td><%= link_to 'Edit', edit_revista_path(revista) %></td>
    <td><%= link_to 'Destroy', revista, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

